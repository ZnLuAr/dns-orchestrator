{
  "name": "dns-orchestrator",
  "private": true,
  "version": "1.4.2",
  "author": "AptS:1547 (Yuhan Bian / 卞雨涵 <apts-1547@esaps.net>)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "VITE_PLATFORM=web vite",
    "build": "tsc && vite build",
    "build:web": "VITE_PLATFORM=web tsc && VITE_PLATFORM=web vite build",
    "preview": "vite preview",
    "preview:web": "VITE_PLATFORM=web vite preview",
    "tauri": "tauri",
    "sync-version": "node scripts/sync-version.mjs",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "format:check": "biome check ./src",
    "format:fix": "biome check --write ./src",
    "check": "pnpm format:check && pnpm lint",
    "fix": "pnpm format:fix",
    "format:rust:tauri": "cd src-tauri && cargo fmt --all && cd ..",
    "format:rust:actix-web": "cd src-actix-web && cargo fmt --all && cd ..",
    "format:rust:core": "cd dns-orchestrator-core && cargo fmt --all && cd ..",
    "format:rust:provider": "cd dns-orchestrator-provider && cargo fmt --all && cd ..",
    "format:rust": "pnpm format:rust:all",
    "format:rust:all": "pnpm format:rust:tauri && pnpm format:rust:actix-web && pnpm format:rust:core && pnpm format:rust:provider",
    "lint:rust:tauri": "cd src-tauri && cargo clippy --lib -p dns-orchestrator-tauri && cd ..",
    "lint:rust:actix-web": "cd src-actix-web && cargo clippy --bin dns-orchestrator-web && cd ..",
    "lint:rust:core": "cd dns-orchestrator-core && cargo clippy --lib -p dns-orchestrator-core && cd ..",
    "lint:rust:provider": "cd dns-orchestrator-provider && cargo clippy --lib -p dns-orchestrator-provider && cd ..",
    "lint:rust": "pnpm lint:rust:all",
    "lint:rust:all": "pnpm lint:rust:tauri && pnpm lint:rust:actix-web && pnpm lint:rust:core && pnpm lint:rust:provider",
    "lint:rust:fix": "pnpm lint:rust:tauri --fix && pnpm lint:rust:actix-web --fix && pnpm lint:rust:core --fix && pnpm lint:rust:provider --fix",
    "postinstall": "pnpm sync-version"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-fs": "^2.4.4",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-os": "^2.3.2",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.7.3",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "react-router-dom": "^7.11.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "use-debounce": "^10.0.6",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@tauri-apps/cli": "^2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "typescript": "~5.9.3",
    "vite": "^7.3.0"
  },
  "packageManager": "pnpm@10.26.0"
}
